<resources>
    <style name="Theme.ApartmentRentAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_day</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark_day</item>
        <item name="colorOnPrimary">@color/textColorPrimary_day</item>
        <item name="colorSecondary">@color/colorAccent_day</item>
        <item name="colorSecondaryVariant">@color/notification_day</item>
        <item name="colorOnSecondary">@color/textColorSecondary_day</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ApartmentRentAndroid.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark_night</item>
        <item name="colorOnPrimary">@color/textColorPrimary_night</item>
        <item name="colorSecondary">@color/colorAccent_night</item>
        <item name="colorSecondaryVariant">@color/notification_night</item>
        <item name="colorOnSecondary">@color/textColorSecondary_night</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">


        <!-- Kolor tekstu w DatePicker -->
        <item name="android:textColorPrimary">@color/colorPrimary_day</item>

        <!-- Kolor akcentu DatePicker -->
        <item name="colorAccent">@color/colorAccent_night</item>

        <!-- Kolor przyciskÃ³w w DatePicker -->
        <item name="android:colorControlNormal">@color/textColorSecondary_day</item>
    </style>
</resources>